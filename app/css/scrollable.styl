.scrollable
  overflow-x: none
  overflow-scrolling: touch
  -webkit-overflow-scrolling: touch
  overflow-y: auto

.scrollable-content
  padding: 0
  margin: 0
  display: inline-block
  border: 0
  min-height: 100%

html.ios
  .scrollable
    overflow-y: scroll

  .scrollable-content
    margin-top: 1px
    margin-bottom: 1px
